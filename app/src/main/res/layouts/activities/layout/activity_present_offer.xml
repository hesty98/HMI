<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".view.ActivityPresentOffer">
    <TextView
        android:id="@+id/offer_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:textSize="50dp"
        android:text="Title"
        android:layout_marginTop="30dp"
        android:layout_marginStart="30dp"
        android:textStyle="bold"
        />
    <TextView
        android:id="@+id/descriptionTV"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/offer_title"
        app:layout_constraintStart_toStartOf="parent"
        android:textSize="30dp"
        android:layout_marginTop="50dp"
        android:layout_marginHorizontal="50dp"
        android:text="loremipsum"
        />
    <TextView
        android:id="@+id/pricePerUnit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/descriptionTV"
        android:text="20,00â‚¬"
        android:layout_marginEnd="30dp"
        android:layout_marginTop="30dp"
        android:textSize="70dp"
        />
    <com.google.android.material.button.MaterialButton
        android:id="@+id/buyButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@id/dontBuyButton"
        app:layout_constraintTop_toTopOf="@id/pricePerUnit"
        android:textSize="35dp"
        android:text="Buy"
        />
    <com.google.android.material.button.MaterialButton
        android:id="@+id/dontBuyButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toEndOf="@id/buyButton"
        app:layout_constraintEnd_toStartOf="@id/pricePerUnit"
        app:layout_constraintTop_toTopOf="@id/pricePerUnit"
        android:textSize="35dp"
        android:text="Don't buy"
        />
</androidx.constraintlayout.widget.ConstraintLayout>