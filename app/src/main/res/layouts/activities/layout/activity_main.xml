<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    android:id="@+id/layout"
    >
    <androidx.constraintlayout.widget.ConstraintLayout
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintWidth_percent="0.4">
        <TextView
            android:id="@+id/locationTV"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintWidth_percent="1"
            android:layout_marginTop="15dp"
            android:layout_marginLeft="15dp"
            android:text="@string/location"
            android:textSize="32dp"
            />
        <TextView
            android:id="@+id/arrivalTVLeft"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/locationTV"
            app:layout_constraintWidth_percent="0.5"
            android:layout_marginTop="15dp"
            android:layout_marginLeft="15dp"
            android:textSize="32dp"
            android:text="@string/arrivalString"
            />
        <TextView
            android:id="@+id/arrivalTVRight"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toEndOf="@id/arrivalTVLeft"
            app:layout_constraintTop_toBottomOf="@id/locationTV"
            app:layout_constraintWidth_percent="0.5"
            android:layout_marginTop="15dp"
            android:textSize="32dp"
            android:text="@string/arrivalTime"
            />
        <TextView
            android:id="@+id/currentTimeTVLeft"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/arrivalTVLeft"
            app:layout_constraintWidth_percent="0.5"
            android:layout_marginTop="15dp"
            android:layout_marginLeft="15dp"
            android:textSize="32dp"
            android:text="@string/currentTimeString"
            />
        <TextView
            android:id="@+id/currentTimeTVRight"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toEndOf="@id/currentTimeTVLeft"
            app:layout_constraintTop_toBottomOf="@id/arrivalTVRight"
            app:layout_constraintWidth_percent="0.5"
            android:layout_marginTop="15dp"
            android:textSize="32dp"
            android:text="@string/currentTime"
            />
        <TextView
            android:id="@+id/swUsedTV"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/currentTimeTVLeft"
            app:layout_constraintWidth_percent="1"
            android:layout_marginTop="15dp"
            android:layout_marginLeft="15dp"
            android:textSize="32dp"
            android:text="@string/swUsed"
            />
    </androidx.constraintlayout.widget.ConstraintLayout>
    <ImageView
        android:id="@+id/mapView"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintWidth_percent="0.4"
        app:layout_constraintHeight_percent="0.3"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:src="@drawable/map"
        android:scaleType="centerCrop"
        />
    <ImageButton
        android:id="@+id/homeButton"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:src="@drawable/ic_home_black_100dp"
        android:background="@android:color/transparent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="15dp"
        android:layout_marginRight="15dp"
        />
    <TextView
        android:id="@+id/speedTV"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:text="@string/pace"
        android:textSize="32dp"
        android:layout_marginTop="15dp"
        android:layout_marginRight="15dp"
        />
    <ImageButton
        android:id="@+id/settingsButton"
        android:layout_width="100dp"
        android:layout_height="100dp"
        app:layout_constraintTop_toBottomOf="@id/speedTV"
        android:background="@android:color/transparent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="15dp"
        android:layout_marginRight="15dp"
        android:src="@drawable/ic_settings_black_100dp"
        />
</androidx.constraintlayout.widget.ConstraintLayout>